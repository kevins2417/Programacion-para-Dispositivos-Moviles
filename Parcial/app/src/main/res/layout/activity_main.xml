<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_azul">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido al juego de preguntas y respuestas :)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="#CCCCCC"
        android:gravity="center" />

    <Button
        android:id="@+id/category_math_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MatemÃ¡ticas"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/category_general_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cultura General"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/category_history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historia"
        android:layout_margin="8dp"/>

</LinearLayout>